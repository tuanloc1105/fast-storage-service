{
  "name": "electron",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/electron/src",
  "projectType": "application",
  "targets": {
    "build": {
      "dependsOn": [{ "projects": ["fast-storage"], "target": "build" }],
      "executor": "nx-electron:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/electron",
        "main": "apps/electron/src/main.ts",
        "tsConfig": "apps/electron/tsconfig.app.json",
        "assets": ["apps/electron/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/electron/src/environments/environment.ts",
              "with": "apps/electron/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run fast-storage:serve",
          "nx run electron:serve-electron"
        ]
      }
    },
    "serve-electron": {
      "executor": "nx-electron:execute",
      "options": {
        "buildTarget": "electron:build"
      }
    },
    "package": {
      "dependsOn": ["build"],
      "executor": "nx-electron:package",
      "options": {
        "name": "electron",
        "frontendProject": "fast-storage",
        "sourcePath": "dist/apps",
        "outputPath": "dist/packages",
        "prepackageOnly": true
      }
    },
    "make": {
      "executor": "nx-electron:make",
      "options": {
        "name": "electron",
        "frontendProject": "fast-storage",
        "sourcePath": "dist/apps",
        "outputPath": "dist/executables"
      }
    },
    "lint": {
      "command": "eslint apps/electron/**/*.ts"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/electron/jest.config.ts"
      }
    }
  }
}
